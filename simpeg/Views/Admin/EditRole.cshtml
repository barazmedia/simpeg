@model simpeg.Models.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}
<h2>Edit Role</h2>
<form asp-action="EditRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label">Id</label>
        <input asp-for="Id" class="form-control" disabled/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Role</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        </br>
        <input type="submit" class="btn btn-primary" value="Update"/>
        <a asp-action="ListRole" class="btn btn-primary">Back to List</a>
    </div>
</form>
@if(Model.Users.Any())
{
    <div class="row">
        <h2>User dalam role ini</h2>
    </div>
    <table class="table table-striped">
        <tr>
            <th>User in Role</th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
    </table>
    <a asp-action="UpdateUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove User</a>
}
else 
{
    <div class="row">
        <h2>Belum ada User dalam role ini <a asp-action="UpdateUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove User</a></h2>
    </div>
}