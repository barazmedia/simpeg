@model List<UpdateUsersInRoleViewModel>

@{
    ViewData["Title"] = "Edit Users in Role";
    var roleid = ViewData["roleid"];
}
<form asp-action="UpdateUsersInRole">
    <div class="card">
        <div class="card">
            <div class="card-header">
                Edit user dalam role ini
            </div>
            <div class="card-body">
                @for(int i=0; i<Model.Count(); i++)
                {
                    <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                 </div>
                }
            </div>
            <div class="card-footer text-muted">
                <input type="submit" class="btn btn-primary" value="Update"/>
                <a class="btn btn-primary" asp-action="EditRole" asp-route-id="@roleid">Cancel</a>
            </div>
        </div>
    </div>
</form>